{% extends '@!PrestaShop/Admin/layout.html.twig' %}
{# Since PS 8.0.0 you can use @PrestaShopCore instead of @!Prestashop
(https://devdocs.prestashop-project.org/8/modules/concepts/templating/admin-views/#override-templates) #}
{% form_theme entityForm '@PrestaShop/Admin/TwigTemplateForm/prestashop_ui_kit.html.twig' %}

{% block content %}

{{ form_start(entityForm) }}
<div class="row justify-content-center">
  <div class="col-xl-12">
    <div class="card">
      <h3 class="card-header">
       	  {{ 'Add new'|trans({}, 'Modules.Iqitproductflags.Config') }}
      </h3>
      <div class="card-body card-block">
        <div class="form-wrapper card-text">
          {{ form_widget(entityForm) }}
        </div>
      </div>
      <div class="card-footer">
        <a href="{{ path('iqitproductflags') }}" class="btn btn-outline-secondary">{{ 'Cancel'|trans({}, 'Admin.Actions') }}</a>
        <div class="d-flex justify-content-end">
          <button class="btn btn-primary" id="form-iqitproductflags-save-button">{{ 'Save'|trans({}, 'Admin.Actions') }}</button>
        </div>
      </div>
    </div>
  </div>
  {{ form_end(entityForm) }}
  {% endblock %}

  {% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('../modules/iqitproductflags/views/dist/createForm.js') }}"></script>
  {% endblock %}
